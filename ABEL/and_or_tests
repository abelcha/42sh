echo -e 'bad && ls ;
bad && ls;

echo -e 'bad && ls ;
bad && ls;

echo -e 'bad || ls ';
bad || ls;

echo -e ' ls && bad';
ls && bad;

echo -e ' ls || bad';
ls || bad;

echo -e ' ls file && pwd';
ls file	&& pwd;

echo -e 'ls file || pwd';
ls file || pwd;

echo -e 'pwd && ls file';
pwd && ls file;

echo -e 'pwd && ls file';
pwd && ls file;